<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">
    <type-extension type-id="SitePreferences">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="CloudinaryPageDesignerAPIkey">
                <display-name xml:lang="x-default">Cloudinary API Key</display-name>
                <description xml:lang="x-default">The API Key of your Cloudinary account</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="CloudinaryPageDesignerCNAME">
                <display-name xml:lang="x-default">Cloudinary CNAME (Optional)</display-name>
                <description xml:lang="x-default">The CNAME from your Cloudinary account.  Defaults to res.cloudinary.com</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
                <default-value>res.cloudinary.com</default-value>
           </attribute-definition>
            <attribute-definition attribute-id="CloudinaryPageDesignerCloudName">
                <display-name xml:lang="x-default">Cloudinary Cloud Name</display-name>
                <description xml:lang="x-default">The Cloud Name of your Cloudinary account</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="CloudinaryPageDesignerSecretKey">
                <display-name xml:lang="x-default">Cloudinary API Secret</display-name>
                <description xml:lang="x-default">The API Secret of your Cloudinary account</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="CloudinaryPageDesignerTag">
                <display-name xml:lang="x-default">Tag Name for Fetching Assets</display-name>
                <description xml:lang="x-default">The tag used in your Cloudinary account for assets to be used in Page Designer.  Defaults to "SFCCPageDesigner"</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
                <default-value>SFCCPageDesigner</default-value>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="CloudinaryPageDesigner">
                <display-name xml:lang="x-default">Cloudinary Page Designer</display-name>
                <attribute attribute-id="CloudinaryPageDesignerCloudName"/>
				<attribute attribute-id="CloudinaryPageDesignerCNAME"/>
                <attribute attribute-id="CloudinaryPageDesignerAPIkey"/>
                <attribute attribute-id="CloudinaryPageDesignerSecretKey"/>
                <attribute attribute-id="CloudinaryPageDesignerTag"/>
            </attribute-group>
        </group-definitions>
    </type-extension>
</metadata>
